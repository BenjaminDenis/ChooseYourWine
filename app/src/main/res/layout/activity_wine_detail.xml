<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/product_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        tools:background="#AAA"
        />

    <TextView
        android:id="@+id/product_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/product_img"
        android:layout_alignTop="@+id/product_img"
        android:textStyle="bold"
        tools:text="Barcode"
        />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_alignLeft="@+id/product_code"
        android:layout_below="@+id/product_code"
        tools:text="Product name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="A boire avec..."
        android:id="@+id/drink_with"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meal_list"
        android:layout_below="@+id/drink_with"
        android:layout_alignStart="@+id/drink_with" />
</RelativeLayout>